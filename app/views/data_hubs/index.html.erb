<h1>Your Hubs</h1>
<br>
<p><%= link_to new_data_hub_path, class: 'btn btn-primary btn-md' do %>
  <i class="bi bi-plus-circle-fill"></i>
  DataHub
<% end %>
</p>

<div class="card-body table-responsive p-0">
  <table class="table table-hover text-nowrap">
    <thead>
      <tr>
        <th></th>
        <th>Drive ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @data_hubs.each do |data_hub| %>
        <tr>
          <td> <h6><i class="bi bi-hdd-fill"></i></td>
          <td><%= data_hub.drive_id %></td>
          <td>
            <%= link_to data_hub do %>
             <i class="bi bi-eye-fill"></i>
             View
           <% end %> | 
           <%= link_to data_hub_path(data_hub), data: { turbo_method: :delete } do %>
             <i class="bi bi-trash-fill"></i>
             Delete
           <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

